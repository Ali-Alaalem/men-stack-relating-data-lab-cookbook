<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <style>
     

      li {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
      }

      button, a {
        margin-left: 10px;
      }
      .edit{
        text-decoration:none ;
      color: black;
      }
    </style>


    <%- include('../partials/_navbar.ejs') %>

    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%=user._id%>/foods/new">Add </a>
<% if(foods.length===0){%>
<p>There is no item</p>
<%}else{%>


    <ul>
        <% foods.forEach((food)=>{ %>
        <li>
         <%= food.name %>
            <form
            action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE"
            method="POST"
          >
          <button type="submit">Delete</button>
          </form>
          <button><a class="edit" href="/users/<%= user._id %>/foods/<%= food._id %>/edit">
            Edit 
          </a></button>
          
        </li>
        <% }) %>
      </ul>
      <%}%>
  </body>
</html>